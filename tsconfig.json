{
    "extends": "./tsconfig.base.json",
    "include": ["src/**/*", "test/**/*", "scripts/**/*", "examples/**/*"],
    "compilerOptions": {
        "outDir": "./dist",
        "rootDirs": ["./src", "./test", "./scripts", "examples/**/*"],
        "paths": {
            "fancy-state-machine": ["./src"]
        }
    },
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "module": "CommonJS"
        },
        "ignore": ["/node_modules*"]
    }
}
